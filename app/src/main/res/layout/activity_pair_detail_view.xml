<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_20"
    tools:context=".MainActivity">


    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        >



        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            >
        <ImageView
            android:id="@+id/img_back"
            android:padding="4dp"
            android:paddingStart="10dp"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:src="@drawable/arrow"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"></ImageView>

            <fontspackageForTextView.BoldExtra
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC"
                android:textColor="@color/dark_blue"
                android:id="@+id/txt_main_pair"
                android:textSize="20dp"
                ></fontspackageForTextView.BoldExtra>

            <fontspackageForTextView.Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/USDT"
                android:textColor="@color/grey_dark"
                android:id="@+id/txt_sub_pair"
                android:textSize="13dp"
                ></fontspackageForTextView.Regular>

        </LinearLayout>
        <fontspackageForTextView.BoldExtra
            android:layout_centerInParent="true"
            android:maxLines="1"
            android:id="@+id/txt_price"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/green"
            >
        </fontspackageForTextView.BoldExtra>


        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/rr_change"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:background="@drawable/round_corner_drawable"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                >


                <ImageView
                    android:id="@+id/img_arrow"
                    android:layout_height="12dp"
                    android:layout_width="18dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/rightarrow"
                    app:tint="@color/white"></ImageView>

                <fontspackageForTextView.BoldMedium
                    android:id="@+id/txt_change"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+0"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    >
                </fontspackageForTextView.BoldMedium>
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

        </LinearLayout>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@color/dark_blue"
                android:weightSum="5">

                <fontspackageForTextView.Regular
                    android:id="@+id/txt_allorder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_myorders"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/white"
                    android:gravity="center"
                    android:text="My Orders"
                    android:textColor="@color/white"
                    android:textSize="12dp"></fontspackageForTextView.Regular>

                <fontspackageForTextView.Regular
                    android:id="@+id/txt_trades"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_trade"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/white"
                    android:gravity="center"
                    android:text="Trades"
                    android:textColor="@color/grey_dark"
                    android:textSize="12dp"></fontspackageForTextView.Regular>

                <fontspackageForTextView.Regular
                    android:id="@+id/text_buy_sell"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/img_icon"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_ordernew"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/blue_color"
                    android:gravity="center"
                    android:text="Buy/Sell"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:drawableTint="@color/grey_dark"></fontspackageForTextView.Regular>


                <fontspackageForTextView.Regular
                    android:id="@+id/txt_chart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_chart"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/white"
                    android:gravity="center"
                    android:text="Charts"
                    android:textColor="@color/grey_dark"
                    android:textSize="12dp"></fontspackageForTextView.Regular>

                <fontspackageForTextView.Regular
                    android:id="@+id/txt_openOrders"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_ordernew"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/white"
                    android:gravity="center"
                    android:text="Orders"
                    android:textColor="@color/grey_dark"
                    android:textSize="12dp"></fontspackageForTextView.Regular>

            </LinearLayout>

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            >
            <ImageView
                android:padding="9dp"
                android:layout_centerVertical="true"
                android:id="@+id/img_icon"
                android:layout_gravity="center"
                android:background="@drawable/complete_round_drawable"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/buyselllogotb"
                ></ImageView>




        </RelativeLayout>
</RelativeLayout>





    </RelativeLayout>


</LinearLayout>