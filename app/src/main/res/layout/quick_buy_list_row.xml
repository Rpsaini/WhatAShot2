<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:background="@color/white"
    android:id="@+id/ll_fund_list_row"
    android:layout_height="60dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/img_currencyicon"
                ></ImageView>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                >

            <fontspackageForTextView.BoldMedium
                android:paddingStart="10dp"
                android:id="@+id/txt_currency_name"
                android:layout_width="wrap_content"
                android:text="Btc"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingRight="70dp"
                android:layout_marginLeft="10dp"
                android:textSize="17dp"
                android:textColor="@color/black"
                ></fontspackageForTextView.BoldMedium>

                <fontspackageForTextView.Regular
                    android:paddingRight="70dp"
                    android:paddingStart="10dp"
                    android:id="@+id/txt_currency_price"
                    android:layout_width="match_parent"
                    android:text="23,0909"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/textcolor"
                    ></fontspackageForTextView.Regular>



            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_balance"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"

            android:layout_marginRight="30dp"
            android:text="Buy"
            android:background="@drawable/green_drawable"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="14dp"></TextView>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lite_background"
        ></View>



</LinearLayout>

