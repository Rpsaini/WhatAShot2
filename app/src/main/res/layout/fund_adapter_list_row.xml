<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="1dp"
    android:id="@+id/ll_fund_list_row"
    android:layout_height="60dp">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img_currencyicon"
                ></ImageView>

            <fontspackageForTextView.BoldExtra
                android:paddingStart="10dp"
                android:id="@+id/txt_currency_name"
                android:layout_width="wrap_content"
                android:text="Btc"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textSize="17dp"
                android:textColor="@color/dark_blue"
                ></fontspackageForTextView.BoldExtra>
        </LinearLayout>

        <fontspackageForTextView.BoldMedium
            android:layout_centerVertical="true"
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textAllCaps="true"
            android:textColor="@color/hintTextColor"
            android:textSize="18dp"></fontspackageForTextView.BoldMedium>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lite_background"
        ></View>


</LinearLayout>
