<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_relativelayout"
    >


    <LinearLayout
        android:id="@+id/ll_iiner"
        android:background="@drawable/drawable_upper_round"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <ImageView
            android:layout_margin="7dp"
            android:padding="10dp"
            android:id="@+id/img_hideview"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_close"
            ></ImageView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <LinearLayout
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/txt_msg"
                style="@style/edittext_style_14_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center|left"
                android:text="@string/select_any_two"></TextView>

        </LinearLayout>
        </ScrollView>

    </LinearLayout>



</RelativeLayout>